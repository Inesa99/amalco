@model PageViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    ViewData["Description"] = Model.MetaDescription;
}
<div class="row width100">
    <div class="offset-lg-2 col-lg-8 offset-md-1 col-md-10 offset-1 mt-5 mt-md-2">
        <small class="mt-3">Главная / Услуги и цены</small>
    </div>
</div>


<div class="row mt-5 width100">
    <div class="offset-lg-2 col-lg-3 offset-md-1 col-md-4 offset-1">
        @await Component.InvokeAsync("_Menu")
    </div>
    <div class="col-lg-5 offset-lg-0 col-md-6  offset-1 col-11">
        <div class="forbigml forimg">
            @Html.Raw(Model.Content)

        </div>
    </div>

</div>
<div class="mainmiddle mt-5 width100">
    @await Html.PartialAsync("_Advantages")
</div>
<div class="row mt-5 mb-5 width100">

    <div class="offset-lg-2 col-lg-8 offset-md-1 col-md-10 offset-1 col-11 mb-3">
        <div class="forbigml forimg">
            @Html.Raw(Model.Content2)

        </div>
        @*@Html.Raw(Model.Content2)*@
    </div>

    <h3 class="offset-lg-2 col-lg-8 offset-md-1 col-md-10 offset-1 col-11 text-center mt-5  mb-5">Подбор персонала с помощью рекрутингового агентства Амалко проходит поэтапно:</h3>
    <div class="offset-lg-2 col-lg-8 offset-md-1 col-md-10 mb-3">
        <div class="row">
            <div class="col-lg-2 col-md-4 offset-1 col-11 text-center">
                <img src="~/images/About/Icons/001-curriculum.png" />
                <p class="fontsize11 mt-4">1. Ваша заявка на подбор</p>
            </div>
            <div class="col-lg-2 col-md-4 offset-1 col-11 text-center">
                <img src="~/images/About/Icons/002-test.png" />
                <p class="fontsize11 mt-2">2. Ознакомление с нашими условиями</p>
            </div>
            <div class="col-lg-2 col-md-4 offset-1 col-11 text-center">
                <img src="~/images/About/Icons/003-job-search.png" />
                <p class="fontsize11 mt-2">3. Выбор среди кандидатов представленными нашими менеджерами</p>
            </div>
            <div class="col-lg-2 col-md-4 offset-1 col-11 text-center">
                <img src="~/images/About/Icons/004-handshake.png" />
                <p class="fontsize11 mt-2">4. Заключение договора и оплата предоставленных услуг</p>
            </div>
            <div class="col-lg-2 col-md-4 offset-1 col-11 text-center">
                <img src="~/images/About/Icons/005-calendar.png" />
                <p class="fontsize11 mt-2">5. Выход кандидата на испытательный срок</p>
            </div>
            <div class="col-lg-2 col-md-4 offset-1 col-11 text-center">
                <img src="~/images/About/Icons/006-support.png" />
                <p class="fontsize11 mt-2">6. Обслуживание по договору</p>
            </div>
        </div>
    </div>


    <div class="pt-5 pb-5 width100">
        <div class="offset-md-3 col-md-6 offset-1 col-10">
            <div class="row">
                <h3 class="col-md-12 col-12 text-center pb-3 mt-3">Онлайн-заказ персонала</h3>
                <div class="mb-3">
                    <div class="col-12">
                        <div class="fororderlefts">
                            <div class="ml1rem">
                                <input class="offset-lg-0 col-lg-3 col-md-10 offset-1 col-10 p-1 withradius m-3" placeholder="Ваше имя" name="Name" required>
                                <input class="offset-lg-0 col-lg-3 col-md-10 offset-1 col-10 p-1 withradius m-3" placeholder="Ваш телефон" name="PhoneNumber" required>
                                <input class="offset-lg-0 col-lg-3 col-md-10 offset-1 col-10 p-1 withradius m-3" placeholder="Ваш Email" name="Email" required>

                                <select class="offset-lg-0 col-lg-4 col-md-10 offset-1 col-10 mt-3 mb-3 ml-3 withradius bg-white p-1" name="ServiceId" required>
                                    <option value="">Выберете персонал</option>
                                    <option value="AL">Выберете персонал</option>
                                    <option value="ALL">Выберете персонал</option>
                                </select>
                                <span class="ml1rembigscreen">
                                    <button class="offset-lg-2 col-lg-4 offset-md-1 col-md-10  offset-1 col-10 btn btn-red text-white mt-3  mb-3 sentorder p-1">Отправить заявку</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
