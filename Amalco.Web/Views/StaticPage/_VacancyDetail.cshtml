@model VacancyVM

<div class="modal-content">
    <div class="modal-header">

        <h4 class="modal-title text-center" id="myModalLabel">@Model.Title</h4>
        <button type="button" class="close float-right pl-0 pr-0 ml-0 mr-0" id="close" data-dismiss="modal" aria-hidden="true">×</button>

    </div>
    <div class="modal-body">
        <span>@Model.Description</span>
        <form method="post" asp-action="VacancyResponse" enctype="multipart/form-data" id="vacancyResponse">
            <input type="hidden" value="@Model.Id" name="VacancyId" />
            <div class="form-group row m-3 border-bottom-0">
                <div class="col-12">
                    <input type="text" placeholder="ФИО" class="form-control pt-2 pb-2 pt-2 pb-2" name="FullName" required />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <div class="col-12">
                    <input type="text" placeholder="Номер телефона" class="form-control pt-2 pb-2 pt-2 pb-2" name="Number" required />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <div class="col-12">
                     
                        
                            <input type="checkbox" value="True" name="FamilyExperience" id="FamilyExperience">
                        
                        
                            <label for="FamilyExperience">Опыт работы в семьях</label>
                       
                    
                   
                   
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <div class="col-12">
                    <label>Резюме</label>
                    <input type="file" class="form-control pt-2 pb-2 pt-2 pb-2" name="CVFile" />

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn cancel_btn" data-dismiss="modal" id="cancel">Закрыть окно</button>
                <button type="submit" class="btn btn-info text-center ladda-button" id="btnSave" data-style="zoom-in"><span class="ladda-label">Отправить заявку</span></button>
            </div>
        </form>
    </div>
