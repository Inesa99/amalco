@model CallOderModel
<div class="modal-content">
    <div class="modal-header">

        <h3 class="modal-title text-center" id="myModalLabel">Заказать звонок</h3>
        <button type="button" class="close float-right pl-0 pr-0 ml-0 mr-0" id="close" data-dismiss="modal" aria-hidden="true">×</button>

    </div>
    <form method="post" asp-controller="Order" asp-action="Call" id="callOrderForm" onsubmit="gtag('event', 'send', { 'event_category': 'form', 'event_label': 'feedback-submit' })">
        <div class="modal-body">
            <div class="form-group row m-3 border-bottom-0">
                <div class="col-12">
                    <input type="text" placeholder="Ваше имя" class="form-control pt-2 pb-2 pt-2 pb-2" asp-for="Name" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <div class="col-12">
                    <input type="text" placeholder="Ваш номер телефона" class="form-control pt-2 pb-2 pt-2 pb-2 phone-number" asp-for="PhoneNumber" required />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <div class="col-12">
                    <textarea placeholder="Ваш комментарий" class="form-control pt-2 pb-2 textarea-autosize" rows="5" asp-for="Comment"></textarea>
                    <i class="form-group__bar"></i>
                </div>
            </div>
        </div>
        <span class="col-md-6 offset-3 badge badge-success" id="callResult">

        </span>
        <div class="modal-footer">
            <button type="button" class="btn cancel_btn" data-dismiss="modal" id="cancel">Закрыть окно</button>
            <button type="submit" class="btn btn-info text-center ladda-button" id="btnSave" data-style="zoom-in"><span class="ladda-label">Заказать звонок</span></button>
        </div>
    </form>
   
</div>
<script>
    jQuery(function ($) {
        $(".phone-number").mask("+7 999 999-99-99");
    });
</script>