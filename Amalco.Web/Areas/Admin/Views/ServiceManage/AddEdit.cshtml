@model Amalco.Data.ViewModels.Service.ServiceAddEdit
@{
    ViewData["Title"] = "AddEdit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h1>@(Model.Id > 0 ? "Редактировать" : "Добавить") услугу</h1>
    </div>
    <div class="card-body">

        <form method="post" asp-controller="ServiceManage" asp-action="AddEdit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="Name" class="col-3">Название услуги</label>
                <div class="col-7">
                    <input type="text" asp-for="Name" class="for-form pt-2 pb-2 pt-2 pb-2" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="ServiceType" class="col-3">Группа</label>
                <div class="col-7">
                    <select asp-for="ServiceType" asp-items="Html.GetEnumSelectList<ServiceType>()" class="for-form pt-3 pb-3"></select>
                </div>

            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="MainImage" class="col-3">Главное изображение</label>
                <div class="col-7">
                    <input type="hidden" asp-for="MainImage" />
                    <input type="file" name="MainImageFile" />
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="Price" class="col-3">Стоимость</label>
                <div class="col-7">
                    <input type="text" asp-for="Price" class="for-form pt-2 pb-2" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="ServicePayType" class="col-3">Тип оплаты</label>
                <div class="col-7">
                    <select asp-for="ServicePayType" asp-items="Html.GetEnumSelectList<ServicePayType>()" class="for-form pt-3 pb-3"></select>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="Url" class="col-3">Ссылка</label>
                <div class="col-7">
                    <input type="text" asp-for="Url" class="for-form pt-2 pb-2 textarea-autosize" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="MetaDescription" class="col-3">Мета описание</label>
                <div class="col-7">
                    <textarea asp-for="MetaDescription" class="for-form pt-2 pb-2 textarea-autosize" rows="5"></textarea>
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="PageTile" class="col-3">Заголовок в браузере</label>
                <div class="col-7">
                    <textarea asp-for="PageTile" class="for-form pt-2 pb-2 textarea-autosize" rows="5"></textarea>
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="HeaderText" class="col-3">Загаловок(H1)</label>
                <div class="col-7">
                    <input type="text" asp-for="HeaderText" class="for-form pt-2 pb-2" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="ResponsibilityTitle" class="col-3">Заголовок Обязанностей </label>
                <div class="col-7">
                    <input type="text" asp-for="ResponsibilityTitle" class="for-form pt-2 pb-2 textarea-autosize" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="PriceTitle" class="col-3">Заголовок цены </label>
                <div class="col-7">
                    <input type="text" asp-for="PriceTitle" class="for-form pt-2 pb-2 textarea-autosize" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="Content" class="col-3">Контент</label>
                <div class="col-7">
                    <textarea asp-for="Content" class="for-form pt-2 pb-2 textarea-autosize tiny" rows="5"></textarea>
                    <i class="form-group__bar"></i>
                    <input type="file" id="imageUploadForm" />
                    <select id="imgcss">
                        <option value="float:left;margin:10px 10px 10px 0;" selected>Слева</option>
                        <option value="float:right;margin:10px 0 10px 10px;" >Справа</option>
                    </select>
                </div>
            </div>

            <fieldset>
                <div class="form-group row m-3 border-bottom-0">
                    <label class="col-3 mb-2">Обязанности</label>
                    <div class="col-7">
                        @foreach (var item in Model.ResponsibilityList)
                        {
                            <input type="text" value="@item" asp-for="ResponsibilityStrings" class="for-form pt-2 pb-2 mt-2 mb-2" />
                        }
                        <input type="text" asp-for="ResponsibilityStrings" class="res-input for-form pt-2 pb-2 mt-2 mb-2" />
                    </div>

                    <div class="offset-3 col-7 text-right">
                        <button type="button" class="add-resp btn btn-success">+</button>
                    </div>
                </div>
            </fieldset>
            <input type="submit" value="@(Model.Id>0?"Обновить": "Добавить")" class="mt-3 btn btn-success float-right" />

        </form>
    </div>
</div>
