@model VacancyVM
@{
    ViewData["Title"] = "AddEdit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1>@(Model.Id > 0 ? "Редактировать" : "Добавить") вакансию</h1>
    </div>
    <div class="card-body">

        <form method="post" asp-controller="VacancyManage" asp-action="AddEdit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="Title" class="col-3">Название вакансии</label>
                <div class="col-7">
                    <input type="text" asp-for="Title" class="for-form pt-2 pb-2 pt-2 pb-2" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3">
                <label asp-for="VacancyType" class="col-3">Тип</label>
                <div class="col-7">
                    <select asp-for="VacancyType" asp-items="Html.GetEnumSelectList<VacancyType>()" class="for-form pt-3 pb-3"></select>
                </div>

            </div>
            
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="Salary" class="col-3">Зарплата от</label>
                <div class="col-7">
                    <input  asp-for="Salary" class="for-form pt-2 pb-2" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="SalaryDo" class="col-3">Зарплата до</label>
                <div class="col-7">
                    <input asp-for="SalaryDo" class="for-form pt-2 pb-2" />
                    <i class="form-group__bar"></i>
                </div>
            </div>
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="ServicePayType" class="col-3">Тип оплаты</label>
                <div class="col-7">
                    <select asp-for="ServicePayType" asp-items="Html.GetEnumSelectList<ServicePayType>()" class="for-form pt-3 pb-3"></select>
                </div>
            </div>
             
            <div class="form-group row m-3 border-bottom-0">
                <label asp-for="Description" class="col-3"> Описание</label>
                <div class="col-7">
                    <textarea asp-for="Description" class="for-form pt-2 pb-2 textarea-autosize" rows="9"></textarea>
                    <i class="form-group__bar"></i>
                </div>
            </div>
             

             
            <input type="submit" value="@(Model.Id>0?"Обновить": "Добавить")" class="mt-3 btn btn-success float-right" />

        </form>
    </div>
</div>

